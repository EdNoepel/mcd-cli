#!/usr/bin/env bash
set -e
shopt -s extglob

if [[ $MCD_PROXY = yes ]]; then
  MCD_PROXY=$(mcd --proxy-address)
fi
GUY=${MCD_PROXY:-$ETH_FROM}

require-cdp() {
  [ -n "$MCD_CDP" ] ||
    mcd --fail "$1: MCD_CDP not set; Please specify a Cdp id (--cdp=<id>)"
}

case $1 in
  count) {
    sig="count(address)"
    hex=$(seth call ${CDP_MANAGER?} $sig ${GUY?})
    seth --to-dec $hex
  };;
  owner) {
    require-cdp
    id=$(seth --to-word ${MCD_CDP?})
    sig="lads(uint256)(address)"
    echo 0x$(seth call ${CDP_MANAGER?} $sig $id)
  };;
  ls) {
    sig="getCdps(address,address)"
    data=$(seth call ${GET_CDPS?} $sig ${CDP_MANAGER?} $GUY)
    data=${data:130:${#data}}
    mid=$(( ${#data} / 2 ))
    cdps=${data::$mid}; ilks=${data:(-$mid)}
    for i in `seq 64 64 $(( ${#cdps} - 64 ))`; do
      id=$(( 16#${cdps:$i:64} ))
      echo "cdp $id"
      echo "urn ${CDP_MANAGER?}$(printf "%24s" "${id#0x}" | tr ' ' 0)"
      echo "ilk $(mcd --to-ascii ${ilks:$i:64})"
      echo
    done
  };;
  +([[:digit:]]) ) {
    mcd --cdp=$1 cdp "${@:2}"
  };;
  *) {
    mcd cdp-send "$@"
  };;
esac

