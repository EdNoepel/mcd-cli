#!/usr/bin/env bash
### mcd-flips -- View flips and kick-off auctions
### Usage: mcd flips <id>
###    or: mcd flips kick <id> <wad>
set -e
shopt -s extglob
case "$1" in
  +([[:digit:]])) {
    mcd flips-get "$1"
  };;
  kick) {
    [ $# = 3 ] || mcd --fail "$0: Incorrect arguments"
    n=$(seth --to-word $(seth --to-hex $2))
    w=$(seth --to-word $(seth --to-hex $(seth --to-wei "$3 eth")))
    mcd flips-kick "$n" "$w"
  };;
  recent) {
    mcd bites
  };;
  *) {
    mcd help flips
  }
esac
